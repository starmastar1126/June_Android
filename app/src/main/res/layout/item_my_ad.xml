<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ima_picture_iv"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/ima_picture_iv"
        android:layout_toStartOf="@+id/ima_time_tv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ima_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="" />

        <TextView
            android:id="@+id/ima_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="true"
            android:textColor="@color/main_color"
            android:textSize="12sp"
            tools:text="7000" />
    </LinearLayout>

    <TextView
        android:id="@+id/ima_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/time_ic"
        android:textColor="@color/gray"
        android:textSize="12sp"
        tools:text="6 sec. ago" />
</RelativeLayout>