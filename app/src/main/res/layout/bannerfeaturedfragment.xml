<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".ads.activities.AdDetailsActivity">

    <ScrollView
        android:id="@+id/main"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/aad_images_vp"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    tools:background="@drawable/login_bkg" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bottom_title_gradient_bg"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp">


                    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                        android:id="@+id/dots_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:dotsColor="@color/colorPrimary"
                        app:dotsCornerRadius="8dp"
                        app:dotsSize="10dp"
                        app:dotsSpacing="4dp"
                        app:dotsWidthFactor="1.5"
                        app:progressMode="true"
                        app:selectedDotColor="@color/white" />

                </FrameLayout>
            </FrameLayout>

            <Button
                android:id="@+id/aad_options_btn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-22dp"
                android:background="@drawable/featured"
                android:padding="8dp"
                android:text="@string/options_dots"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:layout_toStartOf="@+id/aad_likes_tv"
                    android:drawableStart="@drawable/eye"
                    android:drawablePadding="4dp"
                    android:ellipsize="end"
                    android:visibility="invisible"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    tools:text="453" />
                <TextView
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:layout_toStartOf="@+id/aad_likes_tv"
                    android:drawableTint="@color/white"
                    android:drawableStart="@drawable/ic_remove_red_eye_black_24dp1"
                    android:drawablePadding="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="453" />

                <TextView
                    android:id="@+id/aad_likes_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:layout_toStartOf="@+id/aad_date_tv"
                    android:drawableStart="@drawable/ic_favorite_black_24dpf"
                    android:drawableTint="@color/white"
                    android:drawablePadding="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="453" />

                <TextView
                    android:id="@+id/aad_date_tv"
                    android:layout_width="wrap_content"
                    android:gravity="end|center"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/ic_access_time_black_24dp1"
                    android:drawableTint="@color/white"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="9 JUL 2018"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center|end"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/aad_play_video_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_play_circle_outline_black_24dpf"
                    android:gravity="center_vertical"
                    android:drawableTint="@color/white"
                    android:drawablePadding="@dimen/_3sdp"
                    android:src="@drawable/video_icon"
                    android:text="Video: Watch"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <TextView
                    android:id="@+id/aad_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="16dp"
                    android:layout_toStartOf="@+id/aad_price_tv"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    tools:text="Toyota Prius" />

                <TextView
                    android:id="@+id/aad_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    tools:text="7700" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/grayBg"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingTop="16dp"
                android:paddingEnd="24dp"
                android:paddingBottom="36dp">

                <woopy.com.juanmckenzie.caymanall.views.TextViewC
                    android:id="@+id/aad_description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    tools:text="Description" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/separator" />

                <me.gujun.android.taggroup.TagGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:id="@+id/tag_group"
                    app:atg_horizontalPadding="@dimen/_6sdp"
                    app:atg_verticalPadding="@dimen/_6sdp"
                    android:padding="@dimen/_3sdp"
                    app:atg_borderColor="@color/colorPrimary"
                    app:atg_textSize="@dimen/_12sdp"
                    app:atg_textColor="@color/colorPrimary"
                    style="@style/TagGroup" />
                <View
                    android:id="@+id/groupview"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/separator" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Status"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/Statustext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="24dp"
                        android:layout_toEndOf="@+id/status"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/separator" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/aad_condition_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Condition"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/aad_condition_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="24dp"
                        android:layout_toEndOf="@+id/aad_condition_title_tv"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="Condition" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/separator" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/aad_category_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Category"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/aad_category_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="24dp"
                        android:layout_toEndOf="@+id/aad_category_title_tv"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="Category" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/separator" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/aad_location_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Location"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/aad_location_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="24dp"
                        android:layout_toEndOf="@+id/aad_location_title_tv"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="Location" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/separator" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELLER"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <FrameLayout
                        android:id="@+id/aad_avatar_fl"
                        android:layout_width="65dp"
                        android:layout_height="65dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/aad_avatar_iv"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/logo" />

                        <ImageView
                            android:id="@+id/aad_chat_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginEnd="5dp"
                            android:visibility="invisible"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/chat_red_ic" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/aad_username_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/aad_avatar_fl"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        tools:text="Mark Middleton" />

                    <TextView
                        android:id="@+id/aad_joined_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/aad_username_tv"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@+id/aad_avatar_fl"
                        android:text="Joined:"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/aad_joined_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/aad_joined_title_tv"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/aad_joined_title_tv"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        tools:text="2 days ago" />

                    <TextView
                        android:id="@+id/aad_verified_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/aad_joined_title_tv"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@+id/aad_avatar_fl"
                        android:text="Verified:"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/aad_verified_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/aad_verified_title_tv"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/aad_joined_title_tv"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        tools:text="Yes" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/separator" />


                <woopy.com.juanmckenzie.caymanall.views.TextViewC

                    android:id="@+id/applyforjob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/applyforjob"
                    android:drawablePadding="16dp"
                    android:drawableTint="@color/red"
                    android:padding="10dp"
                    android:text="APPLY FOR THIS JOB"
                    android:textColor="@color/main_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/aad_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@drawable/comment_ic"
                    android:drawablePadding="16dp"
                    android:padding="10dp"
                    android:text="POST A COMMENT"
                    android:textColor="@color/main_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/aad_feedback_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@drawable/feedback_ic"
                    android:drawablePadding="16dp"
                    android:padding="10dp"
                    android:text="Send Feedback"
                    android:textColor="@color/main_color"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/startchat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@drawable/chat_red_ic"
                    android:drawablePadding="16dp"
                    android:padding="10dp"
                    android:text="Start Chat"
                    android:textColor="@color/main_color"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/mainhide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp">



                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:layout_width="@dimen/_10sdp"
                        android:background="@drawable/roundshape"
                        app:custom_color="@color/color_primary_dark"
                        app:corners="100"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_height="@dimen/_10sdp"/>
                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        app:corners="100"
                        app:custom_color="@color/color_primary_dark"
                        android:background="@drawable/roundshape"
                        android:layout_height="@dimen/_10sdp"/>
                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        app:corners="100"
                        app:custom_color="@color/color_primary_dark"
                        android:background="@drawable/roundshape"
                        android:layout_height="@dimen/_10sdp"/>
                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:layout_width="@dimen/_10sdp"
                        app:corners="100"
                        app:custom_color="@color/color_primary_dark"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:background="@drawable/roundshape"
                        android:layout_height="@dimen/_10sdp"/>


                    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:dotsColor="@color/colorPrimary"
                        app:dotsCornerRadius="8dp"
                        app:dotsSize="10dp"
                        app:dotsSpacing="4dp"
                        app:dotsWidthFactor="1.5"
                        app:progressMode="true"
                        app:selectedDotColor="@color/white" />

                </LinearLayout>
            </FrameLayout>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="44dp"
                android:background="@drawable/roundshape"
                android:layout_height="44dp"
                app:corners="100"
                android:layout_marginStart="20dp"
                app:custom_color="@color/color_primary_dark"
                android:layout_marginTop="-22dp"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:layout_toStartOf="@+id/aad_likes_tv"
                    android:drawableStart="@drawable/eye"
                    android:drawablePadding="4dp"
                    android:ellipsize="end"
                    android:visibility="invisible"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    tools:text="453" />
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:layout_toStartOf="@+id/aad_likes_tv"
                    android:drawablePadding="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/gray" />

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:layout_toStartOf="@+id/aad_date_tv"
                    android:drawablePadding="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/gray" />

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/gray" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center|end"
                android:layout_marginEnd="24dp"
                android:padding="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="30sp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/main_color"
                    android:textSize="17sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/grayBg"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingTop="16dp"
                android:paddingEnd="24dp"
                android:paddingBottom="36dp">

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:custom_color="@android:color/darker_gray"
