<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardchat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cchatsAdImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:background="@android:color/white"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/logo1" />

            <TextView
                android:id="@+id/cchatsAdTitleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cchatsAdImg"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/cchatsAdImg"
                android:text="@string/loading"
                android:textColor="#333"
                android:textSize="12sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/cchatsSenderTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cchatsAdTitleTxt"
                android:layout_alignStart="@+id/cchatsAdTitleTxt"
                android:layout_marginTop="5dp"
                android:text="@string/loading"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cchatsDateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cchatsAdImg"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:text="@string/loading"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/cchatsLastMessTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cchatsSenderTxt"
                android:layout_alignStart="@+id/cchatsSenderTxt"
                android:maxLines="1"
                android:lines="1"
                android:text="@string/loading"
                android:textColor="@color/main_color"
                android:textSize="11sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>